<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>BrazilianTypes</AssemblyName>
        <RootNamespace>BrazilianTypes</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>7.1.0.3</Version>
        <Authors>Huam Benvenutti</Authors>
        <RepositoryUrl>https://github.com/hbenvenutti/BrazilianTypes</RepositoryUrl>
        <Title>Brazilian Data Types</Title>
        <Description>Lib with logic for brazilian data types. (CPF, CNPJ, CEP, UF)</Description>
        <PackageReadmeFile>Nuget.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageIcon>logo.png</PackageIcon>
        <PackageTags>Brazil Documents CPF CNPJ PHONE UF</PackageTags>
        <PackageReleaseNotes>
            v7.1.0.3

            - Added Phone number without DDD.

            ---------------------------------

            7 -> .NET 7.0
            1 -> Major Version
            0 -> Minor Version
            3 -> Patch Version

        </PackageReleaseNotes>
        <RepositoryType>Github</RepositoryType>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DocumentationFile>bin\Debug\net7.0\Library.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\net7.0\Library.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../LICENSE" Pack="true" PackagePath=""/>
        <None Include="../Nuget.md" Pack="true" PackagePath=""/>
        <None Include="..\logo.png">
          <Pack>True</Pack>
          <PackagePath></PackagePath>
          <Link>logo.png</Link>
        </None>

    </ItemGroup>

</Project>
