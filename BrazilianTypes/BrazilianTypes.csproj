<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>BrazilianTypes</AssemblyName>
        <RootNamespace>BrazilianTypes</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>7.1.0.4</Version>
        <Authors>Huam Benvenutti</Authors>
        <RepositoryUrl>https://github.com/hbenvenutti/BrazilianTypes/tree/dotnet7</RepositoryUrl>
        <Title>Brazilian Data Types</Title>
        <Description>Lib with logic for brazilian data types. (CPF, CNPJ, CEP, UF)</Description>
        <PackageReadmeFile>Nuget.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageIcon>logo.png</PackageIcon>
        <PackageTags>Brazil Documents CPF CNPJ PHONE UF</PackageTags>
        <PackageReleaseNotes>
            v7.1.0.4

            - Added Test Coverage;
            - Fixed CPF Mask;
            - Fixed Cpf Digits;
            - Fixed CNPJ Mask;
            - Fixed ZipCode Generation;
            - Fixed ZipCode Mask;
            - Fixed Phone Mask.

            All types are now 100% test covered.

        </PackageReleaseNotes>
        <RepositoryType>Github</RepositoryType>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DocumentationFile>bin\Debug\net7.0\BrazilianTypes.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\net7.0\BrazilianTypes.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../LICENSE" Pack="true" PackagePath=""/>
        <None Include="../Nuget.md" Pack="true" PackagePath=""/>
        <None Include="..\logo.png">
          <Pack>True</Pack>
          <PackagePath></PackagePath>
          <Link>logo.png</Link>
        </None>
        <None Remove="Types\Cpf.cs~" />

    </ItemGroup>

</Project>
